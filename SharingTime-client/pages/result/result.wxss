/* pages/result/result.wxss */

/* 未参与行程 */
.explain, .join {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.explain {
  font-size: 120%;
}

/* 结果 */
.content {
  margin: 30rpx 0;
  width: 100%;
  display: flex;
}
.content .name {
  display: flex;
  flex: 5;
  align-items: center;
  justify-content: center;
}
.content .count {
  display: flex;
  flex: 2;
  align-items: center;
  justify-content: center;
}

.result {
  margin: 20rpx 0;
  padding: 30rpx;
}
.header, .result-item {
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  display: flex;
}
.startTime, .rod, .endTime, .userCount {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
