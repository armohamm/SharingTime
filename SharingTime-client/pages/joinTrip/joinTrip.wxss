/* pages/joinTrip/joinTrip.wxss */

.main {
  width: 80%;
  margin: 10rpx auto;
}

/* 为参与行程 */
.header, .time {
  display: flex;
  margin: 40rpx auto;
  align-items: center;
  justify-content: center;
}

.startTime, .rod, .endTime {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}

.inputTime {
  text-align: center;
}

.time input {
  border-bottom: 1px solid black;
}

.tip {
  width: 100%;
  margin: 20rpx;
  color: red;
  font-size: 80%;
}

.add {
  width: 80%;
  margin: 20rpx auto;
}

.submit {
  position: absolute;
  width: 80%;
  bottom: 80rpx;
  left: auto;
  right: auto;
}
.submit button{
  width: 80%;
  margin: 20rpx auto;
}

/* 已参与行程 */
.explain, .again {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.explain {
  font-size: 120%;
}